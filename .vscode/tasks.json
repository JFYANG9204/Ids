				"reveal": "never",
				"panel": "dedicated"
			},
			"problemMatcher": [
				"$tsc-watch"
			],
			"label": "npm: watch",
			"detail": "tsc -b -w"
		},
		{
			"type": "cppbuild",
			"label": "msvc build",
			"command": "cl.exe",
			"args": [
				"/Zi",
				"/EHsc",
				"/nologo",
				"/Fe:",
				"${fileDirname}\\${fileBasenameNoExtension}.exe",
				"${file}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
